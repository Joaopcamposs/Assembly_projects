#include <16F877A.h>
#device ADC=10

#FUSES PUT                      //Power Up Timer
#FUSES NOLVP                    //No low voltage prgming, B3(PIC16) or B5(PIC18) used for I/O

#use delay(crystal=4MHz)
#use FIXED_IO( C_outputs=PIN_C2 )
#define B_S1      PIN_B0
#define B_S2      PIN_B1
#define B_S3      PIN_B2
#define B_S4      PIN_B3
#define HEATER    PIN_C2

